---
import type { LinkItem } from '../types/content';

const { title, description, items } = Astro.props as {
  title: string;
  description?: string;
  items: LinkItem[];
};

// enabled=false を除外（省略は true 扱い）
const visibleItems = items.filter((it) => it.enabled !== false);
---

<section class="rounded-2xl border border-slate-200 bg-white p-5 sm:p-6">
  <!-- Section header -->
  <header class="mb-5 flex items-start justify-between gap-4">
    <div>
      <h2 class="text-lg font-semibold text-slate-900">{title}</h2>
      {description && <p class="mt-1 text-sm text-slate-600">{description}</p>}
    </div>

    <span class="shrink-0 rounded-full bg-sky-50 px-3 py-1 text-xs font-medium text-sky-700">
      {visibleItems.length} links
    </span>
  </header>

  {
    visibleItems.length === 0 ? (
      <div class="rounded-xl border border-slate-200 bg-slate-50 p-4 text-sm text-slate-600">
        現在、募集中の求人はありません。
      </div>
    ) : (
      <ul class="flex flex-col gap-3">
        {visibleItems.map((it) => (
          <li>
            <a
              href={it.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group block rounded-xl border border-slate-200 bg-white p-4 transition
                   hover:border-sky-400 hover:bg-sky-50"
            >
              <div class="flex items-start justify-between gap-3">
                <div class="min-w-0">
                  <div class="truncate font-semibold text-slate-900">{it.label}</div>

                  {it.note && <div class="mt-1 text-sm text-slate-600">{it.note}</div>}

                  {it.tags && it.tags.length > 0 && (
                    <div class="mt-2 flex flex-wrap gap-2">
                      {it.tags.map((tag) => (
                        <span
                          class="inline-flex items-center rounded-full
               border border-sky-200
               bg-sky-50
               px-2.5 py-0.5
               text-xs font-medium text-sky-800
               transition
               group-hover:border-sky-300
               group-hover:bg-sky-100"
                        >
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>

                <span
                  class="mt-0.5 text-slate-400 transition group-hover:text-sky-500"
                  aria-hidden="true"
                >
                  ↗
                </span>
              </div>

              <div class="mt-3 break-all text-xs text-slate-400">{it.url}</div>
            </a>
          </li>
        ))}
      </ul>
    )
  }
</section>
