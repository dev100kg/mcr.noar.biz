---
interface HeroData {
  headline: string;
  subcopy?: string;
}

interface Props {
  hero: HeroData;
  features: string[];
}

const { hero, features } = Astro.props as Props;
const headlineLines = hero.headline.split('\n');
---

<header
  class="page-fade-in relative overflow-hidden rounded-[var(--radius-xl)] border border-[var(--line-soft)] bg-[linear-gradient(180deg,rgba(244,251,247,0.9)_0%,rgba(236,247,241,0.92)_100%)] px-6 py-7 shadow-[var(--shadow-soft)] sm:px-10 sm:py-10"
>
  <div class="relative space-y-6 sm:space-y-7">
    <div class="flex flex-wrap items-center gap-3 pt-2 sm:gap-4 sm:pt-3">
      <a href="https://noar.co.jp" target="_blank" rel="noopener noreferrer nofollow" class="shrink-0">
        <img
          src={`${import.meta.env.BASE_URL}logo.svg`}
          class="h-12 w-auto drop-shadow-[0_5px_10px_rgba(15,23,42,0.09)] sm:h-[4.2rem]"
          alt="株式会社日本オーエー研究所"
        />
      </a>
    </div>

    <h1
      class="hero-display text-[clamp(1.25rem,5.2vw,2.35rem)] font-medium leading-[1.6] tracking-[-0.01em] text-stone-900 sm:text-[clamp(1.5rem,3.1cqw,3rem)]"
    >
      {
        headlineLines.map((line, index) => (
          <span
            class={`block ${
              index === 0
                ? 'font-semibold text-brand-dark tracking-[0.01em]'
                : 'mt-2 text-[0.76em] leading-[1.6] text-stone-700 sm:text-[0.72em]'
            }`}
          >
            {line}
          </span>
        ))
      }
    </h1>

    {
      features.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2.5 sm:mt-8 sm:gap-3">
          {features.map((t) => (
            <span
              class="hero-display rounded-full border border-brand/24 bg-white/82 px-3.5 py-1.5 text-xs font-semibold text-brand-dark shadow-[0_5px_12px_rgba(30,127,79,0.08)] transition sm:px-4 sm:py-2 sm:text-sm"
            >
              {t}
            </span>
          ))}
        </div>
      )
    }
  </div>
</header>
