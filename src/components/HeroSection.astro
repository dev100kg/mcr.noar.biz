---
interface HeroData {
  headline: string;
  subcopy?: string;
}

interface Props {
  hero: HeroData;
  features: string[];
}

const { hero, features } = Astro.props as Props;
const headlineLines = hero.headline.split('\n');
---

<header
  class="page-fade-in relative overflow-hidden rounded-[var(--radius-xl)] border border-[var(--line-soft)] bg-white/92 px-6 py-7 shadow-[var(--shadow-soft)] sm:px-10 sm:py-10"
>
  <div class="space-y-6 sm:space-y-7">
    <div class="flex flex-wrap items-center gap-3 sm:gap-4">
      <a href="https://noar.co.jp" target="_blank" rel="noopener noreferrer nofollow" class="shrink-0">
        <img
          src={`${import.meta.env.BASE_URL}logo.svg`}
          class="h-12 w-auto drop-shadow-[0_5px_10px_rgba(15,23,42,0.09)] sm:h-[4.2rem]"
          alt="株式会社日本オーエー研究所"
        />
      </a>
    </div>

    <h1
      class="hero-display text-[clamp(1.25rem,5.2vw,2.35rem)] font-medium leading-snug tracking-[-0.01em] text-stone-900 sm:text-[clamp(1.5rem,3.1cqw,3rem)]"
    >
      {
        headlineLines.map((line, index) => (
          <span
            class={`block ${
              index === 0
                ? 'bg-gradient-to-r from-[#5eb02f] via-[#71bf4a] to-[#4a8d25] bg-clip-text text-transparent font-semibold'
                : 'mt-1.5 text-[0.76em] leading-snug text-stone-600 sm:text-[0.72em] sm:leading-tight'
            }`}
          >
            {line}
          </span>
        ))
      }
    </h1>

    {
      features.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2.5 sm:mt-8 sm:gap-3">
          {features.map((t) => (
            <span
              class="hero-display rounded-full border border-[#5eb02f]/22 bg-white/80 px-3.5 py-1.5 text-xs font-semibold text-[#4a8d25] shadow-sm transition sm:px-4 sm:py-2 sm:text-sm"
            >
              {t}
            </span>
          ))}
        </div>
      )
    }
  </div>
</header>
